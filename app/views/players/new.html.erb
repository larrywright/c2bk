<h1>New player</h1>

<% form_for(@player) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </p>
  <p>
    <%= f.label 'Password' %><br />
    <%= f.password_field :password_salt %>
  </p>
  <p>
    <%= f.label 'Verify Password' %><br />
    <%= f.password_field :password_hash %>
  </p>
  <p>
    <%= f.label :textmarks_uid %><br />
    <%= f.text_field :textmarks_uid %>
  </p>
  <p>
    <%= f.label :textmarks_phone %><br />
    <%= f.text_field :textmarks_phone %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', players_path %>